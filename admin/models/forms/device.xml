<?xml version="1.0" encoding="utf-8" ?>
<form>
    <fieldset>
        <field
                name="id"
                type="text"
                label="COM_HEARTCARE_HEARTCARE_ID_LABEL"
                description="COM_HEARTCARE_HEARTCARE_NAME_DESC"
                size="40"
                class="inputbox"
                readonly="true"
                default=""
        />
        <field
                name="device_id"
                type="text"
                label="COM_HEARTCARE_HEALTHDATA_DEVICE_ID"
                description="COM_HEARTCARE_HEALTHDATA_DEVICE_ID"
                size="40"
                class="inputbox"
                default=""
        />
        <field
                name="device_type"
                type="text"
                label="COM_HEARTCARE_HEALTHDATA_DATATYPE"
                description="COM_HEARTCARE_HEALTHDATA_DATATYPE"
                size="40"
                class="inputbox"
                default=""
        />
        <field
                name="register_time"
                type="calendar"
                label="COM_HEARTCARE_HEALTHDATA_DEVICE_REGISTER_TIME"
                description="COM_HEARTCARE_HEALTHDATA_DEVICE_REGISTER_TIME"
                size="40"
                format="%Y-%m-%d %H:%M:%S"
        />
        <field
                name="produce_date"
                type="calendar"
                default=""
                label="COM_HEARTCARE_HEALTHDATA_DEVICE_PRODUCE_DATE"
                description="COM_HEARTCARE_HEALTHDATA_DEVICE_PRODUCE_DATE"
                size="40"
                format="%Y-%m-%d"
        />

        <field
                name="description"
                type="textarea"
                label="COM_HEARTCARE_HEALTHDATA_DEVICE_DESCIPTION"
                description="COM_HEARTCARE_HEALTHDATA_DEVICE_DESCIPTION"
                rows="6"
                cols="5"
        />

        <field
                name="service"
                type="editor"
                label="COM_HEARTCARE_HEALTHDATA_DEVICE_SERVICE"
                description="COM_HEARTCARE_HEALTHDATA_DEVICE_SERVICE"
        />
    </fieldset>
    <fields name="images">
        <fieldset name="images" label="JGLOBAL_FIELDSET_IMAGE_OPTIONS">
            <field
                    name="image_first"
                    type="media"
                    label="COM_HEARTCARE_HEALTHDATA_DEVICE_IMAGE_FIRST"
                    description="COM_HEARTCARE_HEALTHDATA_DEVICE_IMAGE_FIRST"
                    directory="devices"
            />
            <field
                    name="image_second"
                    type="media"
                    label="COM_HEARTCARE_HEALTHDATA_DEVICE_IMAGE_SECOND"
                    description="COM_HEARTCARE_HEALTHDATA_DEVICE_IMAGE_SECOND"
                    directory="devices"
            />
        </fieldset>
    </fields>
</form>