<?xml version="1.0" encoding="utf-8" ?>
<form>
    <fieldset>
        <field
                name="name"
                type="text"
                label="COM_HEARTCARE_HEARTCARE_NAME_LABEL"
                description="COM_HEARTCARE_HEARTCARE_NAME_DESC"
                size="40"
                class="inputbox"
                readonly="true"
                default=""
                />
        <field
                name="username"
                type="text"
                label="COM_HEARTCARE_HEARTCARE_USERNAME_LABEL"
                description="COM_HEARTCARE_HEARTCARE_USERNAME_DESC"
                size="40"
                class="inputbox"
                readonly="true"
                default=""
                />
        <field
                name="id"
                type="text"
                label="COM_HEARTCARE_HEARTCARE_ID_LABEL"
                description="COM_HEARTCARE_HEARTCARE_ID_DESC"
                size="40"
                class="inputbox"
                readonly="true"
                default=""
                />
        <field
                name="email"
                type="email"
                label="COM_HEARTCARE_HEARTCARE_EMAIL_LABEL"
                description="COM_HEARTCARE_HEARTCARE_EMAIL_DESC"
                size="40"
                class="inputbox"
                readonly="true"
                validate="email"
                />
        <field
                name="mycalendar"
                type="calendar"
                default=""
                label="COM_HEARTCARE_SELECT_A_DATE_LABEL"
                description="COM_HEARTCARE_SELECT_A_DATE_DESC"
                size="40"
                format="%Y年-%m月-%d日"
                onchange="this.form.submit();"
                />

        <field
                name="mylistvalue"
                type="datatype"
                addfildpath="/administrator/components/com_helloworld/models/fields"
                label="COM_HEARTCARE_SELECT_AN_OPTION_LABEL"
                description="COM_HEARTCARE_SELECT_AN_OPTION_DESC"
                onchange="this.form.fireEvent('submit');this.form.submit();"
                >
                <option>COM_HEARTCARE_ALL_THE_TYPE</option>
        </field>
    </fieldset>
</form>